<Window x:Class="Zadanie2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <RadialGradientBrush x:Key="gradient">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="Gray" Offset="0.75"/>
            <GradientStop Color="White" Offset="1"/>
        </RadialGradientBrush>
        <Style x:Key="styl">
            <Setter Property="Control.Foreground" Value="Orange"/>
            <Setter Property="Control.Background" Value="{StaticResource gradient}"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Button Style="{StaticResource styl}" Content="Przycisk"/>
    </Grid>
</Window>
